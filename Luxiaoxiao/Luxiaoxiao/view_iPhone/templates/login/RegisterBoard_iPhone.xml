<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="RegisterBoard_iPhone">
  <!--
    <row></row>
  -->
  <col class="wrapper">
    <!-- add your UI elements here -->
    <row class="back_container">
        <image class="back_icon"/>
        <button class="mask" id="back"/>
    </row>
    <col class="wrapper_1">
        <label class="board_title">注册</label>
        <row class="container">
            <label class="phone_num_label public">手机号:</label>
            <row class="input_container">
                <image class="frame"/>
                <input id="phoneNum" class="phoneNum public_input" placeholder="请输入您的手机号"/>
            </row>
        </row>
        <row class="container">
            <label class="phone_password_label public">密码:</label>
            <row class="input_container">
                <image class="frame"/>
                <input id="password" class="password public_input" placeholder="请输入6-12位字符"/>
            </row>
        </row>
        <row class="container">
            <label class="phone_password_label public">验证码:</label>
            <row class="input_container_verity">
                <image class="frame"/>
                <input id="verity" class="verity public_input" placeholder="请输入6位数字"/>
            </row>
            <button id="get_verity_code" class="get_verity_code">获取</button>
        </row>
        <row class="container_register">
            <button class="register_btn" id="register">注册</button>
        </row>
    </col>
  </col>
   
  <style type="text/css">
    .wrapper {
        width: 100%;
        height: 100%;
    }
    
    .wrapper_1{
    width: 70%;
    height: auto;
    float: center;
    v-float: center;
    }
    
    .back_container{
    position:absloute;
    top:40px;
    left:20px;
    width: 40px;
    height: 40px;
    }
    
    .container{
    width: 100%;
    height: 50px;
    }
    
    .container_register{
    width: 100%;
    height: 60px;
    }
    
    .public{
    float: left;
    color:#000000;
    width: auto;
    height: auto;
    font-size: 15px;
    v-float: center;
    }
    
    .public_input{
    width: 95%;
    height: 100%;
    left: 5%;
    font-size:15px;
    }
    
    .input_container{
    width: 75%;
    height: 40px;
    float: right;
    v-float: center;
    position:absolute;
    }
    
    .frame{
    position:absolute;
    width: 100%;
    height: 100%;
    background-color:white;
    }
    
    .password{
    input-secure: yes;
    }
    
    .register_btn{
    height: 40px;
    width: 100%;
    background-color:#24B7ED;
    v-float: center;
    font-size: 15px;
    }
    
    .register{
    position:absolute;
    width: 30px;
    height: 20px;
    float:left;
    v-float:top;
    color:#a4a4a4;
    font-size:15px;
    }
    
    .forget{
    position:absolute;
    width: 70px;
    height: 20px;
    float:right;
    v-float:top;
    color:#a4a4a4;
    font-size:15px;
    }
    
    .input_container_verity{
    width: 75%;
    height: 40px;
    float: right;
    v-float: center;
    position:absolute;
    }
    
    .get_verity_code{
    width: 40px;
    height:25px;
    right:5px;
    background-color:#24B6ED;
    font-size:12px;
    v-float:center;
    position:absolute;
    }
    
    .board_title{
    width: auto;
    height: auto;
    float: center;
    font-size:33px;
    margin-bottom:30px;
    }
    
    .back_icon{
    width: 20px;
    height: 20px;
    mode:fit;
    image:url(back_black.png);
    }
    
    .mask{
    position:absolute;;
    width: 100%;
    height: 100%;
    }
  </style>
</ui>
